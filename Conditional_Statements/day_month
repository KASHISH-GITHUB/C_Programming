    if( month ==2 && year%4==0 && year%400==0 || year%100!=0)
    {
        printf("the year is leap and it has 29 days");
    }
    else if(month==2)
    {
          printf("the year is leap and it has 28 days");
    }
    else if (month == 1 || month == 3 || month  == 5 ||month == 7|| month == 8 || month == 10 ||month==12 )
    {
        printf("the number of days are 31");

    }
    else
    {
        printf("the number of days are 30");
    }

