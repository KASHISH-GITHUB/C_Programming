#include<stdio.h>
int main()
{
    int a,n,r;
    printf("enter a number");
    scanf("%d",&n);
    r=0;
    for(a=1;a<n;a++)
    {
        if(n%a==0)
        {
            r=r+a;
        }
    }
    if(r==n)
    {
        printf("number is perfect ");
    }
    else
    {
        printf("number is  not perfect ");
    }
}
