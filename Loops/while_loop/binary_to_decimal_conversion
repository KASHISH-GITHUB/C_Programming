#include<stdio.h>
int main()
{
    int base=1,rem=0,binary;
    int n,digit;
    printf("enter the binary digit");
    scanf("%d",&binary);
    
    while(binary!=0)
    {
        rem=n%10;
        digit=digit+rem*base;
        binary=binary/10;
        base=base*2;
    }
    printf(" the entered digit in decimal is %d",digit);
}
