#include<stdio.h>
int main()
{
    float bs,da,hra,gs;
    printf("Enter Basic Salary: ");
    scanf("%f",&bs);
    da = 0.4 * bs;
    hra= 0.2 * bs;

    gs = bs + da + hra;

    printf("\n Basic Salary: %.f",  bs);
    printf("\n Dearness Allowance: %f", da);
    printf("\n House Rent: %f", hra);
    printf("\n\n Gross Salary: %f", gs);

    return (0);
}
